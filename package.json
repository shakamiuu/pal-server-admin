{
    "name": "pal-server-admin",
    "private": true,
    "version": "0.0.0",
    "main": "dist-electron/index.js",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc && rimraf dist-electron && vite build && electron-builder",
        "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
        "format": "prettier --write ./**/*.{vue,ts,tsx,js,jsx,css,less,scss,json,md}"
    },
    "build": {
        "appId": "com.gewu.pal",
        "productName": "幻兽帕鲁GM工具",
        "asar": true,
        "copyright": "By gewu_gu",
        "directories": {
            "output": "release/${version}"
        },
        "files": [
            "./package.json",
            "./dist-electron"
        ],
        "mac": {
            "icon": "src/assets/image/logo.png",
            "artifactName": "${productName}_${version}.${ext}",
            "target": [
                "dmg"
            ]
        },
        "win": {
            "icon": "src/assets/image/logo.png",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "artifactName": "${productName}_${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": false
        },
        "releaseInfo": {
            "releaseNotes": "版本更新的具体内容"
        }
    },
    "dependencies": {
        "@arco-design/web-vue": "^2.54.3",
        "@vueuse/core": "^10.7.2",
        "lodash": "^4.17.21",
        "mitt": "^3.0.1",
        "moment": "^2.30.1",
        "nprogress": "^0.2.0",
        "pinia": "^2.1.7",
        "pinia-plugin-persistedstate": "^3.2.1",
        "vue": "^3.3.11",
        "vue-router": "^4.2.5"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.202",
        "@types/node": "^20.11.10",
        "@types/nprogress": "^0.2.3",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "@vitejs/plugin-vue": "^4.5.2",
        "electron": "^28.2.0",
        "electron-builder": "^24.9.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard-with-typescript": "^43.0.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-vue": "^9.20.1",
        "less": "^4.2.0",
        "prettier": "^3.2.4",
        "typescript": "^5.2.2",
        "vite": "^5.0.8",
        "vite-plugin-electron": "^0.15.6",
        "vite-svg-loader": "^5.1.0",
        "vue-tsc": "^1.8.25"
    }
}
